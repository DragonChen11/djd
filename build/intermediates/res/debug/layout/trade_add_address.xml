<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include
        android:id="@+id/include_global_topbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/global_widget_topbar" />
     <ImageView android:layout_width="match_parent"
         android:layout_height="1dp"
         android:background="@drawable/logs_leaveword_fg"/>

    <EditText
        android:id="@+id/edit_address"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@color/gainsboro"
        android:hint="请输入详细地址"
        android:padding="10dp"
        android:textSize="16sp" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/login_input_line" />

    <EditText
         android:id="@+id/edit_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/gainsboro"
        android:hint="请输入收货人姓名"
        android:padding="10dp"
        android:textSize="16sp" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/login_input_line" />

    <EditText
         android:id="@+id/edit_phone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/gainsboro"
        android:hint="请输入收货人联系电话"
        android:padding="10dp"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_login_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
       android:background="@drawable/global_selector_button"
        android:gravity="center"
        android:text="保　存"
        android:textColor="#fff"
        android:textSize="20sp" />

</LinearLayout><!-- From: file:/E:/android-studio-ide-143.2443734-windows/Zip(Git)/djd/djd/src/main/res/layout/trade_add_address.xml -->